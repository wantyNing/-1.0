.num_wrap{
  width: 220rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
  border: 3rpx solid #b1b1b1;
  margin-right: 20rpx;
}
.num_wrap .btn{
  width: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 0;
  background-color: #fff;
  color: #333;
}
.btn::after{
  border: none;
}
.num_wrap input{
  width: 90rpx;
  height: 60rpx;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  border-left: 1rpx solid #b1b1b1;
  border-right: 1rpx solid #b1b1b1;
  margin: 0 2rpx;
}