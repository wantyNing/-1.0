.popupDom{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background-color: rgba(0,0,0,.7);
}
.body{
  width: 80%;
  height: 700rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 100rpx;
}
.body-head{
  width: 100%;
  height: 100rpx;
  background-color: #fbfbfb;
  display: flex;flex-direction: row;
}
.body-head image{
  width: 80rpx;
  height: 80rpx;
  margin: auto 0;
}
.desp{
  color: #f5c45e;
  margin: auto 15rpx;
  line-height: 100rpx;
}
.body-scan{
  height: 500rpx;
  width: 100%;
}
.title{
  width: 100%;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
}
.price{
  width: 90%;
  height: 60rpx;
  font-size: 45rpx;
  text-align: center;
  margin: 0 auto;
  font-weight: 700;
}
.body-scan image{
  width: 400rpx;
  height: 400rpx;
  margin-left: 110rpx;
}
.end{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 200rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}
.item{
  font-size: 35rpx;
  border-bottom: 1rpx solid #f1f1f1;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  background-color: #fff;
}