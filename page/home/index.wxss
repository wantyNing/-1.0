  padding-bottom: 20rpx;
  width: 100%;
}
.swipers {
  width: 100%;
  height: 100%;
}
.swipers swiper-item image{
  width: 750rpx;
}
.dots{  
  width: 300rpx;
  height: 36rpx; 
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 350rpx;
  top: 400rpx;
}  
/*未选中时的小圆点样式 */
.dot{  
  width: 16rpx;  
  height: 16rpx;   
  border-radius: 50%;
  margin-right: 24rpx;
  background-color: #e0dfe5;
}  
/*选中以后的小圆点样式  */
.active{  
  width: 28rpx;   
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #fff;
}  
.small-use{
  height: 280rpx;
  display: flex;
