}
.header{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0 0 33rpx;
  width: 90%;
  height: 64rpx;
  position: fixed;
  background-color: #fff;
  z-index: 9;
  opacity: 0.7;
  border: 1rpx solid #fff;
  box-shadow:1px 1px 1px 1px #f1f1f1;
  border-radius: 40rpx;
}
.header image{
  margin: 12rpx 15rpx 0 30rpx;
  width: 38rpx;
  opacity: 1;
  height: 42rpx;
}
.header .search{
  height: 45rpx;
  width: 86%;
  margin: 10rpx auto;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-left: 1rpx solid #b2b2b2;
}
.header .search image{
  width: 38rpx;
  height: 38rpx;
  margin-top: 8rpx;
  margin-left: 20rpx;
}
.header .search text{
  padding: 8rpx;
  width: 100%;
  font-size: 12px;
  color: #999999;
  background-color: #fff;
  opacity: 0.7
}
.disp{
  /* background-color: #f11623; */
