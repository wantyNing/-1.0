page{
  background-color: #f1f1f1;
}
.search{
  background-color: #fff;
  display:flex;
  flex-direction: row;
  padding: 5px;
  position: fixed;
  width: 95%;
}
.searchHead{
  background-color: #f6f6f6;
  width: 96%;
  border-radius: 15px;
  height: 65rpx;
  display: flex;
  flex-direction: row;
}
.searchLeft image{
  width: 38rpx;
  height: 38rpx;
  margin-left: 10px;
  margin-top: 5px;
}
.searchRight image{
  width: 38rpx;
  height: 38rpx;
  margin-left: 10px;
  margin-top: 5px;
  float: right;
  padding-right: 15px;
}
.search input{
  display: inline-block;
  padding: 7rpx;
  width: 100%;
  font-size: 32rpx;
}
.btndisp{
  width: 20%;
}
.btn{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 25px;
  margin-left: 10px;
  border: 1px solid #e83a3d;
  width: 40px;
  text-align: center;
  background-color: #e83a3d;
  border-radius: 3px;
  color: white;
}
.hr{
  top: 85rpx;
  width: 100%;
  height: 1rpx;
  background-color: #ccc;
  opacity: 0.3;
  position: fixed;
}
.title{
  padding: 10px;
  height: 1200rpx;
}
.headdown{
  display: flex;
  flex-direction: row;
}
.left{
  width: 80%;
  height: 20px;
  font-size: 15px;
}
.right{
  width:20%;
  font-size: 13px;
  color: #e4393c;
  text-align: right;
}
.tips{
  padding: 5px 5rpx 5rpx 0;
}
.tip{
  background-color: #e8e8ed;
  width: 42px;
  height: 25px;
  line-height: 25px;
  border-radius: 3px;
  text-align: center;
  font-size: 12px;
  margin-right: 7px;
  float: left;
  margin-bottom: 10px;
}
.item{
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 15px;
  padding-top: 10px;
  height: 40rpx;
}
.goodsName{
  width: 90%;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #ccc;
  opacity: 0.5;
}
.name{
  margin-top: 10px;
}
.dispHead{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #898989;
  position: fixed;
  top: 88rpx;
  border-bottom: 1rpx solid #ccc;
}
.leftHead{
  width: 75%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.orderstyle{
  display: flex;
  flex-direction: row;
}
.orderstyle image{
  width: 20rpx;
  height: 20rpx;
  margin-left: 2rpx;
  margin-top: 38rpx;
  /* margin-bottom: 20rpx; */
}
.ordersize image{
  width: 35rpx;
  height: 35rpx;
}
.rightHead{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-left: 60rpx;
}
.ites{
  line-height: 30rpx;
  margin-top:32rpx; 
}
.rightHead image{
  width: 35rpx;
  height: 35rpx;
  margin-top: 30rpx;
}
.body{
  width: 100%;
  /* height: 100rpx; */
  font-size: 30rpx;
  padding-top: 5rpx;
}
.type1{
  background-color: #fff;
  width: 48.5%;
  height: 500rpx;
  float: left;
  margin: 0 5rpx;
  margin-bottom: 5rpx;
}
.type1 image{
  margin-top: 5rpx;
  width: 100%;
  height: 300rpx;
}
.descrip{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}
.type2{
  height: 250rpx;
  width: 98%;
  padding:0 10rpx 5rpx 10rpx;
  display: flex;
  flex-direction: row;
}
.type2 image{
  width: 300rpx;
  height: 230rpx;
  border-radius: 10rpx;
}
.manjian{
  color:#f88a81;
  border:4rpx solid #f88a81; 
  border-radius:15rpx;
  height: 26rpx;
  width: 60rpx;
  margin-top: 10rpx;
  font-size: 20rpx;
  text-align: center;
}