.resp{
  display: flex;
  flex-direction:row;
  width: 70%;
  color: #fff9e9;
  font-size: 38rpx;
  justify-content: space-around;
  position: absolute;
  top: 620rpx;
  left: 115rpx;
}
.item{
  padding: 20rpx 25rpx;
  margin: 0 10rpx;
  border-radius: 50%;
  border: 6rpx solid #fff9e9;
}
.paper{
  width: 95%;
  height: 400rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.paper-item{
  width: 48%;
  height: 180rpx;
  background-color: #fff;
  margin-left: 10rpx;
  border-radius: 10rpx;
  box-shadow:-1px 1px 1px 1px #e6e5e2;
  display: flex;
  flex-direction: row;
}
.left{
  width: 85%;
  display: flex;
  flex-direction: row;
}
.right{
  width: 15%;
  height: 100%;
  background:linear-gradient(to bottom, #ee9b4b , #e95852);
  border-left: 1rpx dashed #e6e5e2;
  color: #fff;
  font-size: 25rpx;
}
.left-dot{
  color: #e85a53;
  font-size: 35rpx;
  width: 18%;
  text-align: center;
  line-height: 80rpx;
}
.left-value{
  width: 82%;
  height: 100%;
}
.left-top{
  height: 40%;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.price{
  font-size: 50rpx;
  color: #e85a53;
  line-height: 85rpx;
}
.texts{
  font-size: 30rpx;
  line-height: 80rpx;
  color: #e85a53;
  padding-left: 10rpx;
}
.left-bottom{
  width:100%;
  height:60%;
}
.disp{
  font-size: 22rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.time{
  color: #ba9788;
  margin: 10rpx;
  font-size: 20rpx;
  text-align: left;
}
.right-item{
  height: 20%;
  width: 100%;
  line-height: 60rpx;
  text-align: center;
}
.hot-item{
  width: 48%;
  height: 500rpx;
  border-bottom: 10rpx solid #f2f2f2;
  float: left;
  background-color: #fff;
  margin-left: 10rpx;
}
.hot-item image{
  margin: 15rpx 0;
  margin-left: 50rpx; 
  width: 240rpx;
  height: 240rpx;
}
.goods_name{
  margin-top: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.goods_sellpoint{
  color: #878787;
  text-align: center;
  font-size: 28rpx;
}
.goods_price{
  font-size: 33rpx;
  width: 80%;
  height: 50rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  background-color: #c1120f;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
}
.active{
  background-color: #a09292; 
}